<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#1E88E5</item>
    </style>

    <!-- This style is applied to the SettingActivity in the manifest-->
    <style name="AppTheme.SettingsTheme" >
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:textColorPrimaryInverse">@android:color/background_light</item>-->
    </style>
    <!-- It is use by the AppTheme.SettingsTheme to give background color to the PreferenceCategories-->
    <style name="PreferenceCategoryStyle" >
        <item name="android:layout">@layout/pref_category_race</item>
    </style>

    <style name="AppTheme.SettingsTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="buttons_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorTextButtons</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="linear_text_views_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="counter_text_views_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="counter_text_views_styles.summary_text_views_style">
        <item name="android:text">Chicken</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fryer_text_views_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="fryer_linear_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="menu_name_counter_text_views_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">45sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">6dp</item>
    </style>



</resources>
