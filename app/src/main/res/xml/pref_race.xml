<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:title="Fryers">

        <ListPreference
            android:defaultValue="@string/number_of_fryers_default_value"
