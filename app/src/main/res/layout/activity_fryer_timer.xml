            android:gravity="center"
            android:padding="10dp"
            android:text="Cow"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/fryer3_layout"

