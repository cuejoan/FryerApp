<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="4.0"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/fryer1_layout"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Fryer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_margin="5dp"
            android:background="@color/colorDivider"
            android:gravity="center"
            android:text="@string/fryer_1"
            android:textColor="#fff"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/text_fryer1_zoneA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/zone_a"
            android:textColor="#fff"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/text_fryer1_zoneB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/zone_b"
            android:textColor="#fff"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/text_fryer1_zoneC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/zone_c"
            android:textColor="#fff"
            android:textSize="50sp" />


        <Button
            android:id="@+id/menuItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="3.5"
            android:background="@drawable/menu_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="Chicken"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/fryer2_layout"
        android:layout_height="match_parent"
        android:orientation="vertical">

